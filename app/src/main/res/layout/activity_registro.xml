<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actividades.RegistroActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
       android:layout_gravity="center"
        app:srcCompat="@drawable/logos" />

    <EditText
        android:id="@+id/edit_ema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"

        android:ems="10"
        android:hint="@string/app_email"
        android:inputType="textEmailAddress"
         />

    <EditText
        android:id="@+id/edit_usu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="@string/app_usuario"
        android:inputType="textPersonName"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/visor_pas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
         android:layout_marginTop="1dp"
        android:layout_marginEnd="24dp"
          android:ems="10"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/edit_pas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="@string/app_pasword"
            android:inputType="textPassword"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:textSize="10sp"
        android:text="@string/btn_reg"
        android:background="@drawable/boton_uno"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        >


    <Button
        android:id="@+id/text_inicio"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:layout_weight="2"
        android:background="@drawable/buton_dos"
        android:text="Iniciar SesiÃ³n"
         />
        <Button
            android:id="@+id/text_salir"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buton_dos"
            android:text="Salir"
            android:textSize="8sp"
            />

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"/>
</LinearLayout>